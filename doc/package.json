{
  "name": "@neo4j/docs",
  "version": "1.0.0",
  "description": "Neo4j Docs builder",
  "main": "index.js",
  "watch": {
    "build:dev": {
      "patterns": ["docs"],
      "extensions": "adoc"
    }
  },
  "scripts": {
    "start": "node server.js",
    "build:dev": "antora --stacktrace docs-dev.yml",
    "watch": "npm-watch",
    "build:docs": "antora --fetch --stacktrace docs.yml"
  },
  "license": "ISC",
  "dependencies": {
    "@antora/cli": "^2.3.3",
    "@antora/site-generator-default": "^2.3.3"
  },
  "devDependencies": {
    "express": "^4.17.1",
    "npm-watch": "^0.7.0"
  }
}
